import random
cards = 0
lives = 9
for cards in range (3):
    a = random.randint(1,10)
    if a == 1:
        print("Gain 2 lives")
    elif a == 2:
        print("Gain 1 live")
    elif a == 3:
        print("Lose 2 lives")
    elif a == 4:
        print("Lose 1 live")
    elif a == 5:
        print("When go wrong path lose 0.5 live")
    elif a == 6:
        print("When go wrong path lose 1.5 live")
    elif a == 7:
        print("Gain 0.5 live")
    elif a == 8:
        print("Gain 1.5 lives")
    elif a == 9:
        print("When go wrong path lose 2 lives")
    else:
        print("Lose 0.5 live")
